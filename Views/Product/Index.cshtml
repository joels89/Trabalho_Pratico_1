@model IEnumerable<Product>

@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>

<table class="table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Price</th>
		</tr>
	</thead>
	<tbody>
		@foreach(Product p in Model) {
			<tr>
				<td>@p.Name</td>
				<td>@p.Price €</td>
			</tr>
		}
	</tbody>
</table>

